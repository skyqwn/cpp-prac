{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Only (for LLDB)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "clang -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\""
      ],
      "group": "build",
      "presentation": {
        "clear": true,
        "reveal": "always"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build & Run C",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "clang -g \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
      ],
      "group": "build",
      "presentation": {
        "clear": true,
        "reveal": "always"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build & Run C++ Project",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "clang++ -std=c++17 -stdlib=libc++ -g *.cpp -o MyProgram && ./MyProgram"
      ],
      "options": {
        "cwd": "${fileDirname}" // 현재 열려있는 파일 폴더를 작업 디렉터리로 지정
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
